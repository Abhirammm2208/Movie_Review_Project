{
  "version": 2,
  "builds": [
    { "src": "backend/server.js", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "client/dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js" },
    { "handle": "filesystem" }
  ]
}